@model IEnumerable<LibraryManagement.Models.Customer>

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Membership Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.MembershipDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- "Create New Customer" button at the bottom of the page -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>