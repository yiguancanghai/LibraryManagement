@model LibraryManagement.ViewModels.LibraryBranchViewModel

@{
    ViewData["Title"] = "Delete Library Branch";
}

<h2>Delete Library Branch</h2>

<h3>Are you sure you want to delete this branch?</h3>

<div>
    <h4>@Model.BranchName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Books</dt>
        <dd class="col-sm-10">
            <ul>
                @if (Model.BookTitles != null)
                {
                    
                @foreach (var title in Model.BookTitles)
                {
                    <li>@title</li>
                }    
                

}
            </ul>
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>